<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:gravity="center"
        android:text="Your first task is to choose one of the following stories:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/simple"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/background_light"
            android:onClick="StoryClicked"
            android:text="Story: Simple"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorLink="@android:color/holo_orange_light"
            android:textStyle="italic" />

        <Button
            android:id="@+id/tarzan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/background_light"
            android:onClick="StoryClicked"
            android:text="Story: Tarzan"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorLink="@android:color/holo_orange_light"
            android:textStyle="italic" />

        <Button
            android:id="@+id/university"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/background_light"
            android:onClick="StoryClicked"
            android:text="Story: University"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorLink="@android:color/holo_orange_light"
            android:textStyle="italic" />

        <Button
            android:id="@+id/clothes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/background_light"
            android:onClick="StoryClicked"
            android:text="Story: Clothes"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorLink="@android:color/holo_orange_light"
            android:textStyle="italic" />

        <Button
            android:id="@+id/dance"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/background_light"
            android:onClick="StoryClicked"
            android:text="Story: Dance"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorLink="@android:color/holo_orange_light"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>