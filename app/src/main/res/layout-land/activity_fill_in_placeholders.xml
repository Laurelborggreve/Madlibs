<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".FillInPlaceholders">


    <TextView
        android:id="@+id/User_To_Do"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Fill in the words to complete the story!"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Words_Left"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Word_Fill_In"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="noun"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/Enter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="OkClicked"
            android:text="Ok"
            android:textColor="@android:color/holo_purple" />
    </LinearLayout>

    <TextView
        android:id="@+id/Word_Description"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/Stimulation"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text="Great! Keep going!"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:visibility="invisible" />

</LinearLayout>